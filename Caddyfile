{
    frankenphp {
        # Worker mode for maximum performance (10x+ faster!)
        # Threads MUST be > Workers (e.g., threads=4, workers=2)
        num_threads {$FRANKENPHP_NUM_THREADS:4}
        worker {
            file /app/public/frankenphp-worker.php
            num {$FRANKENPHP_NUM_WORKERS:2}
            env APP_ENV {$APP_ENV:production}
        }
    }
    order php_server before file_server
}

:80 {
    root * /app/public
    encode gzip zstd
    
    # PHP Server with worker mode
    php_server
    
    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
        -X-Powered-By
    }
    
    # Laravel specific
    @disallowed {
        path /storage/*
        path /.env*
        path /.git/*
        path /vendor/*
    }
    respond @disallowed 404
    
    # Static files caching
    @static {
        file
        path *.ico *.css *.js *.gif *.jpg *.jpeg *.png *.svg *.woff *.woff2 *.ttf *.eot *.webp
    }
    header @static Cache-Control "public, max-age=31536000, immutable"
    
    file_server
}

:443 {
    root * /app/public
    encode gzip zstd
    
    # PHP Server with worker mode
    php_server
    
    tls internal
    
    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
        -Server
        -X-Powered-By
    }
    
    # Laravel specific
    @disallowed {
        path /storage/*
        path /.env*
        path /.git/*
        path /vendor/*
    }
    respond @disallowed 404
    
    # Static files caching
    @static {
        file
        path *.ico *.css *.js *.gif *.jpg *.jpeg *.png *.svg *.woff *.woff2 *.ttf *.eot *.webp
    }
    header @static Cache-Control "public, max-age=31536000, immutable"
    
    file_server
}

